

<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80);">
  <div class="container">
    <h1>My Watchlist</h1>
    <p>Add your favourite movies to your watchlist</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>
<div class="container">

<h3>My lists</h3>
<%= link_to "Add new list", new_list_path, class: "btn btn-primary mb-3" %>
<div class="cards">
<% @lists.each do |list| %>
<%= link_to list_path(list), class: "link-without-decoration" do %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(   <%= list.photo.attached? ?  list.photo.url : list.picture_url %>)">
    <%= list.name %>
  </div>

<% end %>
<% end %>

</div>



</div>
